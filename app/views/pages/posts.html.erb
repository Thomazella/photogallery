<% @posts.each do |post| %>
  <div class="post-container">
    <div class="post-title"> <%= post.title %> </div>
    <div class="post-content"> <%= post.content.html_safe %> </div>
    <div class="post-date"> Created at <%= post.created_at.to_formatted_s(:long_ordinal) %>, last update at <%= post.updated_at.to_formatted_s(:long_ordinal) %> </div>
    <div class="post-contributor"> by <%= link_to post.contributor.name, contributor_photos_path(post.contributor.id) %></div>
  </div>
<% end %>
